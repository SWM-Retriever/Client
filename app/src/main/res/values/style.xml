<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/main_blue</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
    </style>
    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/main_blue</item>
        <item name="android:fontFamily">@font/noto_sans_kr_black</item>
    </style>
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>
    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/camera_modal_bottom_sheet_background</item>
    </style>
    <style name="popUpMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
        <item name="android:itemPadding">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>